generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model personnel {
  id        String   @id @default(uuid())
  nom       String
  prenom    String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model formations {
  id          String   @id @default(uuid())
  title       String
  description String
  duration    String
  category    String
  price       Float?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  SECRETAIRE
}

enum ContactStatus {
  NOUVEAU
  EN_COURS
  TRAITE
}
